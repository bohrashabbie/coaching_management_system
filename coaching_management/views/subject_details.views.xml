<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for Student -->
    <record id="view_subject_form_view" model="ir.ui.view">
        <field name="name">subject.details.form</field>
        <field name="model">subject.details</field>
        <field name="arch" type="xml">
            <form string="Subject Information">
            <field name = "subject"/>
            </form>
        </field>
    </record>
    <!-- Window Action -->
    <record id="action_student_information" model="ir.actions.act_window">
        <field name="name">Student information</field>
        <field name="res_model">student.information</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>
